<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/vibrate_item_layout_index_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/vibrate_item_layout_vibrate_textinputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vibrate_item_layout_index_textview"
                android:layout_toLeftOf="@+id/vibrate_item_layout_remove_button">
                <EditText
                    android:id="@+id/vibrate_item_layout_vibrate_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Vibrate (ms)"
                    android:text=""/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/vibrate_item_layout_pause_textinputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vibrate_item_layout_vibrate_textinputlayout"
                android:layout_toLeftOf="@+id/vibrate_item_layout_remove_button">
                <EditText
                    android:id="@+id/vibrate_item_layout_pause_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pause (ms)"
                    android:text=""/>
            </android.support.design.widget.TextInputLayout>

            <com.rey.material.widget.ImageButton
                android:id="@+id/vibrate_item_layout_remove_button"
                style="@style/FloatingWaveColorActionButtonLight2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_action_remove"
                android:adjustViewBounds="true"
                android:background="@color/transparent"
                app:rd_maskType="oval"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
